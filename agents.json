{
  "website": {
    "name": "Example Site",
    "url": "https://example.com",
    "actions": {
      "login": {
        "method": "POST",
        "endpoint": "/api/auth",
        "params": ["username", "password"]
      },
      "buy_product": {
        "method": "POST",
        "endpoint": "/api/checkout",
        "params": ["product_id", "quantity"]
      }
