    "enabled": true,
    "supported_chains": ["Ethereum", "Solana", "Polygon"],
    "addresses": {
      "ETH": "0x123...",
      "SOL": "SolanaAddress..."
    },
    "payment_methods": {
      "onchain": true,
      "offchain": false
    }
  }
}
