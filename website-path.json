{
  "website": {
    "name": "Example Store",
    "url": "https://examplestore.com",
    "description": "An AI-accessible e-commerce site"
  },
  "actions": {
    "api": {
      "login": {
        "method": "POST",
        "endpoint": "/api/auth",
        "params": ["username", "password"],
        "headers": {
          "Content-Type": "application/json"
        },
        "error_handling": {
          "retry_count": 3,
          "timeout": 5000,
          "fallback": "ui"
        }
      },
      "checkout": {
        "method": "POST",
        "endpoint": "/api/checkout",
        "params": ["product_id", "quantity", "payment_method"],
        "error_handling": {
          "retry_count": 2,
          "fallback": "browser_automation"
        }
      }
    },
    "ui": {
      "login": {
        "type": "form",
        "selectors": {
          "username": "#username_input",
          "password": "#password_input",
          "submit": "#login_button"
        },
        "error_handling": {
          "retry_count": 2,
          "captcha_required": true
        }
      },
      "navigate_to_cart": {
        "type": "click",
        "selector": "#cart_icon"
      },
      "purchase": {
        "type": "form",
        "selectors": {
          "product_id": "#product_id",
          "quantity": "#quantity_input",
          "submit": "#checkout_button"
        },
        "error_handling": {
          "retry_count": 3,
          "fallback": "browser_automation"
        }
      }
    }
  },
  "crypto_payments": {
    "enabled": true,
    "supported_chains": ["Ethereum", "Solana", "Polygon"],
    "addresses": {
      "ETH": "0x123...",
      "SOL": "SolanaAddress..."
    },
    "payment_methods": {
      "onchain": true,
      "offchain": false
    }
  },
  "authentication": {
    "methods": ["email_password", "wallet_connect"],
    "captcha": {
      "type": "recaptcha",
      "selector": "#recaptcha",
      "bypass_methods": ["captcha_solver_service", "manual_prompt"]
    }
  },
  "navigation": {
    "home": "/",
    "shop": "/shop",
    "cart": "/cart",
    "checkout": "/checkout"
  },
  "browser_automation": {
    "enabled": true,
    "fallback_trigger": "api_ui_failure",
    "methods": ["selenium", "puppeteer", "playwright"],
    "headless": true
  }
}
